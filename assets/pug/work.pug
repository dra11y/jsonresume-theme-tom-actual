if helper.validArray(resume.work)
  div(class='work margin-container-4')
    h2(class='section-title no-alone-2') Experience
    div(class='container')
      each work, index in resume.work
        div(class='article margin-container-3')
          div(class='header no-alone-1')
            div(class='table')
              div(class='left')
                h3(id=`work-position-${index}` class='title')=work.position
                span(class='subtitle margin-text-1')
                  a(id=`work-name-${index}` href=work.url)=work.name
                  if work.name && work.location
                    | #{' Â· '}
                  | #{work.location}
              div(class='right')
                span(id=`work-date-${index}` class='date')=helper.calcDateRange(work.startDate, work.endDate)
          div(class='summary markdown margin-text-4')!=helper.mdToHtml(work.summary)
          if helper.validArray(work.highlights)
            ul(class='highlights margin-text-4 no-break')
              each highlight in work.highlights
                li=highlight
